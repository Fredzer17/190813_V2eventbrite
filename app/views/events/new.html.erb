<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @event, url: events_path, html: {method: :post, class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">New Event</h1>
        <div class="form-group">
          <%= f.label :title, "Title" %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, autocomplete: "description", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_date %><br />
          <%= f.date_field :start_date,  class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration %><br />
          <%= f.number_field :duration, in: 5..180, step: 5,  class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price %><br />
          <%= f.number_field :price, in: 1..1000, step:1,  class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location,  class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Create", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
