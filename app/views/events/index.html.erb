<div class="jumbotron jumbotron-index-event">
	<div class="container">
		<div class="row">
	  		<h1 class="display-3">EventBright!</h1>
		</div>
	  
	</div>
</div>

<div class="container">
	<div class='row'>
		<div class="col-sm-2">
			<a href="<%=new_event_path%>"><div class="btn btn-success btn-lg" role="button"><p>Create an event</p></div></a>
		</div>
		<div class="col-sm-2">
			
		</div>
		<div class="col-sm-8">
			<h1>All the events programmed</h1>
		</div>
	</div>
	<div class="row">
    <%@events.each do |event|%>
      <!-- event-->
      <div class="col-sm-2">
      	
      </div>
      <div class="col-sm-2">
			
		</div>
      <div class='col-sm-8 event-tab'>
        <div class="list-group" role='tablist'>
          <a href="<%= event_path(event.id)%>" class="list-group-item list-group-item-action not_like" role='tab'>
