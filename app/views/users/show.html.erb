<!--USER-->
<div class='container'>
  <div class="card text-left">
    <div class="card-header">
      <% unless @user.first_name.nil? %>
          <%= @user.first_name%> <%= @user.last_name%>
      <% else %>
        Anonymous
      <% end %>
    </div>
    <div class="card-img-top avatar-profil">
    </div>
    <div class="card-body">
      <dl>
        <dt>Email</dt>
        <dd><%= @user.email%></dd>
        <dt>Description</dt>
        <dd><%= @user.description%></dd>
        <dd>
          <a href="<%=edit_user_path%>"><span class="btn btn-primary btn-lg" role="button"><p>Edit my profil</p></span></a>
          <a href="<%=edit_user_registration_path%>"><span class="btn btn-primary btn-lg" role="button"><p>Edit my email/password</p></span></a>
      </dd>
      </dl> 
    </div>
  </div>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Events</th>
        <th scope="col">Link</th> 
      </tr>
    </thead>
    <tbody>
      <% @user.events_administrated.each do |event| %>
        <tr>
          <td><%=event.title %></td>
          <td><%= link_to "Event", event_path(event.id) %></td>
        </tr> 
      <% end %>
    </tbody>
  </table>
